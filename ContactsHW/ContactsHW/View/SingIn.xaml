<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactsHW.View.SingIn">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="LightSteelBlue" Padding="20" CornerRadius="0" Margin="0">
                <Label Text="Sing In User" HorizontalTextAlignment="Start" TextColor="White" FontSize="16"/>
            </Frame>
            <Entry Margin="40,80,20,10" Placeholder="Login" FontSize="16" />
            <Entry Margin="40,10,20,10" Placeholder="Password" FontSize="16" IsPassword="True" />
            <Button Text="SingIN" Background="Orange" BorderColor="Wheat"   Margin="50, 280, 40, 10"/>

            <Label Text="Sing Up"  TextColor="Blue" HorizontalOptions="Center" FontSize="16" Padding="30,24,30,0"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>